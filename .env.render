# Resume Optimizer API - Environment Variables for Render Deployment
# -------------------------------------------------------------
# INSTRUCTIONS:
# 1. These variables should be set in Render's environment variables section
# 2. Do not include secrets here, set them directly in Render dashboard

# Flask Settings
FLASK_APP=wsgi.py
FLASK_DEBUG=False
PORT=10000

# Security
SECRET_KEY=replace_with_strong_secret_key_for_production

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Upload and Request Settings
MAX_CONTENT_LENGTH=16777216

# CORS Settings
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Server Settings
ENABLE_VERBOSE_LOGGING=false
TRANSACTION_TRACKING_ENABLED=true
ERROR_DETAIL_LEVEL=minimal

# Application Configuration
# -------------------------------------------------------------
FLASK_ENV=production
MAX_CONTENT_LENGTH=16777216  # 16MB file size limit
CORS_ORIGINS=*  # Restrict to specific domains in production

# Diagnostic Configuration
# -------------------------------------------------------------
ENABLE_VERBOSE_LOGGING=false
TRANSACTION_TRACKING_ENABLED=true
ERROR_DETAIL_LEVEL=minimal

# PDF Generation Configuration
# -------------------------------------------------------------
ENABLE_LATEX_GENERATION=true
PDF_QUALITY=high
TEMPLATE_DIRECTORY=templates/resume
PDF_GENERATION_MODE=fallback

# Processing Limits
# -------------------------------------------------------------
MAX_RESUME_SIZE_MB=5
MAX_JOB_DESCRIPTION_LENGTH=10000
REQUEST_TIMEOUT_SECONDS=60 