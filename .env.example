# Resume Optimizer Environment Variables
# Copy this file to .env and set the required values

# Server configuration
PORT=8080
FLASK_ENV=development
DEBUG=True

# OpenAI API (Required)
OPENAI_API_KEY=your_api_key_here

# PDF Generation options
# Options: pdflatex, fallback
PDF_GENERATION_MODE=fallback

# Database (Optional - in-memory database used if not provided)
# SUPABASE_URL=your_supabase_project_url
# SUPABASE_KEY=your_supabase_anon_key

# Security
# Uncomment and set for production environments
# SECRET_KEY=generate_a_secure_random_key

# Memory limits
# MAX_UPLOAD_SIZE_MB=10
# MAX_PROCESSING_TIME_SEC=60

# Optional Database Settings (use if connecting to Supabase)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# Security Settings
CORS_ORIGINS=*  # For production, specify allowed domains
MAX_CONTENT_LENGTH=16777216  # 16MB

# Logging Settings
LOG_LEVEL=DEBUG  # Use INFO in production
ENABLE_VERBOSE_LOGGING=true  # Use false in production
TRANSACTION_TRACKING_ENABLED=true
ERROR_DETAIL_LEVEL=full  # Use minimal in production 